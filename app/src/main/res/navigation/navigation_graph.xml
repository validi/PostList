<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/insertPostFragment"
        android:name="com.aurora.sampleproject2.view.fragment.InsertPostFragment"
        android:label="insert_post_fragment"
        tools:layout="@layout/insert_post_fragment" />
    <fragment
        android:id="@+id/listPostFragment"
        android:name="com.aurora.sampleproject2.view.fragment.ListPostFragment"
        android:label="ListPostFragment" >
        <action
            android:id="@+id/action_listPostFragment_to_insertPostFragment"
            app:destination="@id/insertPostFragment" />
    </fragment>
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.aurora.sampleproject2.view.fragment.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_listPostFragment"
            app:destination="@id/listPostFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true"
            />
    </fragment>
</navigation>