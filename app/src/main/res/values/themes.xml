<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SampleProject2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="fontFamily">@font/ir_yekan_light</item>
    </style>
    <style name="Theme_EffectScroll" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>


    </style>

    <style name="ir_yekan_regular">
        <item name="fontFamily">@font/ir_yekan_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ir_yekan_medium">
        <item name="fontFamily">@font/ir_yekan_medium</item>
        <item name="android:textColor">@color/navy</item>
    </style>


    <style name="ir_yekan_thin">
    <item name="fontFamily">@font/ir_yekan_thin</item>
</style>



    <style name="BaseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="card_style">
        <item name="cardCornerRadius">4dp</item>
    </style>

    <style name="card_view_with_text" parent="@style/card_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="cardBackgroundColor">@color/percent_50_black</item>
    </style>




</resources>